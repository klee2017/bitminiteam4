<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.bit.team4.repository.mapper.MemberMapper">
	

	<resultMap id="memberMap" type ="Member">
		<result column="phone_no" property ="phoneNo"/>
		<result column="pass_hint" property ="passHint"/>
		<result column="reg_date" property = "regDate"/>
	</resultMap>
	
	<!-- 회원 조회 -->
	<select id ="selectUser" resultMap ="memberMap">
		select * 
		  from tb_member
		  order by id
	</select>
	
	<!-- 회원 가입 sql문 -->
	<insert id ="signUp" parameterType="Member" >
		insert into tb_member(
			id, pass, name, gender, phone_no, pass_hint
		)values(
		#{id},#{pass},#{name},#{gender},#{phoneNo},#{passHint})
	</insert>
	
	<select id ="login" parameterType ="Member" resultMap ="memberMap">
		select *
		  from tb_member
		 where id = #{id} and pass = #{pass}
	</select>
	
	
    
</mapper>